---
export interface Props {
  title: string;
  subtitle: string;
  image?: string;
}
const { title, subtitle, image } = Astro.props;
---
<section class="hero">
  {image && <img src={image} alt="Hero" class="hero-img" />}
  <div class="hero-content">
    <h1>{title}</h1>
    <p>{subtitle}</p>
  </div>
</section>
<style>
@import "../styles/palette.css";
.hero {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 2em;
  background: var(--color-info);
  color: #fff;
  padding: 2em 1em;
  border-radius: 12px;
  margin-bottom: 2em;
}
.hero-img {
  width: 180px;
  height: 180px;
  object-fit: cover;
  border-radius: 50%;
  border: 4px solid var(--color-accent);
  background: var(--color-secondary);
}
.hero-content h1 {
  margin: 0 0 0.5em 0;
  font-size: 2.2em;
}
.hero-content p {
  margin: 0;
  font-size: 1.25em;
}
</style>
