---
export interface Props {
  label: string;
  name: string;
  value?: string;
  required?: boolean;
}
const { label, name, value = '', required = false } = Astro.props;
---
<label class="input-label">
  {label}
  <textarea name={name} class="input-field" required={required}>{value}</textarea>
</label>
<style>
@import "../styles/palette.css";
.input-label {
  display: block;
  margin-bottom: 1em;
  color: var(--color-dark);
  font-weight: 500;
}
.input-field {
  width: 100%;
  padding: 0.5em 1em;
  border: 1px solid var(--color-info);
  border-radius: 4px;
  font-size: 1.25em;
  margin-top: 0.3em;
  min-height: 100px;
  transition: border 0.2s;
}
.input-field:focus {
  border: 2px solid var(--color-primary);
  outline: none;
}
</style>
<style>
@media (max-width: 600px) {
  .input-field {
    width: 100vw !important;
    max-width: 100vw !important;
    box-sizing: border-box;
    padding-left: 0.5em;
    padding-right: 0.5em;
  }
}
</style>
