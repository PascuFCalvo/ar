---
import ButtonComponent from './Button.astro';
export interface Props {
  links: { label: string; href: string }[];
  id: string;
}
const { links, id } = Astro.props;
---



<nav class="navbar">
  <div class="navbar-inner">
    <div class="navbar-left">
      <button class="navbar-burger" id="navbar-burger" aria-label="Abrir menú" aria-expanded="false" aria-controls="navbar-menu">
        <span></span><span></span><span></span>
      </button>
      <ul id="navbar-menu" class="navbar-menu">
        {links.map(link => (
          <li><a href={link.href}>{link.label}</a></li>
        ))}
      </ul>
    </div>
    <div class="navbar-contact-outer">
      <button id="navbar-contact-btn" class="navbar-contact-btn exp-btn exp-btn-yellow" type="button">Contacto</button>
    </div>
    </div>
  </div>
</nav>



<script>
  // Botón de contacto de la navbar abre el mismo modal de contacto global
  document.addEventListener('DOMContentLoaded', () => {
    const navbarContactBtn = document.getElementById('navbar-contact-btn');
    if (navbarContactBtn) {
      navbarContactBtn.addEventListener('click', function(e) {
        e.preventDefault();
        const modalBg = document.getElementById('contact-modal-bg');
        if (modalBg) {
          modalBg.classList.add('active');
          // Enfocar el primer input cuando se abre el modal
          const firstInput = modalBg.querySelector('input');
          if (firstInput) {
            setTimeout(() => firstInput.focus(), 100);
          }
        }
      });
    }

    // Menú hamburguesa
    const burger = document.getElementById('navbar-burger');
    const menu = document.getElementById('navbar-menu');
    if (burger && menu) {
      burger.addEventListener('click', function() {
        const expanded = burger.getAttribute('aria-expanded') === 'true';
        burger.setAttribute('aria-expanded', String(!expanded));
        menu.classList.toggle('open');
        burger.classList.toggle('open');
      });

      // Cerrar menú al hacer clic en cualquier enlace
      menu.querySelectorAll('a').forEach(link => {
        link.addEventListener('click', () => {
          menu.classList.remove('open');
          burger.classList.remove('open');
          burger.setAttribute('aria-expanded', 'false');
        });
      });
    }
  });
</script>

<style>
  @import "../styles/palette.css";
  .navbar {
    background: var(--color-almost-black, #18191a);
    width: 100%;
    margin: 0;
    padding: 0;
    box-sizing: border-box;
  }
  .navbar-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 1.5rem;
    width: 100%;
    min-height: 56px;
    position: relative;
  }
  .navbar-left {
    display: flex;
    align-items: center;
    gap: 1em;
  }
  .navbar-burger {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1003;
    margin-right: 1em;
  }
  .navbar-burger span {
    display: block;
    width: 28px;
    height: 4px;
    margin: 4px 0;
    background: #fff;
    border-radius: 2px;
    transition: 0.3s;
  }
  .navbar-burger.open span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }
  .navbar-burger.open span:nth-child(2) {
    opacity: 0;
  }
  .navbar-burger.open span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }
  .navbar-menu {
    display: flex;
    gap: 2em;
    list-style: none;
    margin: 0;
    padding: 0;
    transition: max-height 0.3s, opacity 0.3s;
  }
  .navbar li {
    margin: 0;
  }
  .navbar-contact-outer {
    display: flex;
    align-items: center;
    margin-left: auto;
    padding-left: 1.5em;
  }
  .navbar-contact-btn {
    margin-left: 0;
    margin-right: 0.2em;
    height: 38px;
    padding: 0.5em 1.3em;
    font-size: 1.08em;
    font-weight: 700;
    border-radius: 22px;
    box-shadow: 0 2px 8px 0 rgba(17,138,178,0.10);
    background: var(--color-secondary);
    color: var(--color-dark);
    border: none;
    transition: background 0.2s, color 0.2s;
    cursor: pointer;
    letter-spacing: 0.5px;
  }
  .navbar-contact-btn:hover {
    background: var(--color-primary);
    color: #fff;
  }
  .navbar a {
    color: #f9f9f9;
    text-decoration: none;
    font-weight: 600;
    font-size: 1.15em;
    transition: color 0.2s;
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
  }
  .navbar a:hover {
    color: var(--color-secondary);
  }
  @media (max-width: 900px) {
    .navbar-inner {
      padding: 0.4em 2vw;
      min-height: 40px;
    }
    .navbar-left {
      gap: 0.5em;
    }
    .navbar-burger {
      display: flex;
    }
    .navbar-menu {
      flex-direction: column;
      width: 100vw;
      background: #18191a;
      max-height: 0;
      overflow: hidden;
      opacity: 0;
      z-index: 1001;
      box-shadow: 0 8px 32px rgba(7,59,76,0.10);
      align-items: center;
      justify-content: center;
      position: fixed;
      top: 0;
      left: 0;
      right: 0;
      height: 100vh;
      padding-top: 56px;
      padding-bottom: 56px;
    }
