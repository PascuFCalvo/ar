---
export interface Props {
  links: { label: string; href: string }[];
}
const { links } = Astro.props;
---



<nav class="navbar">
  <div class="navbar-inner">
    <div class="navbar-left">
      <button class="navbar-burger" id="navbar-burger" aria-label="Abrir menú" aria-expanded="false" aria-controls="navbar-menu">
        <span></span><span></span><span></span>
      </button>
      <ul id="navbar-menu" class="navbar-menu">
        {links.map(link => (
          <li><a href={link.href}>{link.label}</a></li>
        ))}
      </ul>
    </div>
    <a href="#" class="navbar-contact-btn" id="navbar-contact-btn">CONTACTO</a>
  </div>
</nav>

<script>
  // Botón de contacto abre modal
  document.addEventListener('DOMContentLoaded', () => {
    const navbarContactBtn = document.getElementById('navbar-contact-btn');
    navbarContactBtn?.addEventListener('click', function(e) {
      e.preventDefault();
      const modalBg = document.getElementById('contact-modal-bg');
      if (modalBg) {
        modalBg.classList.add('active');
      }
    });

    // Menú hamburguesa
    const burger = document.getElementById('navbar-burger');
    const menu = document.getElementById('navbar-menu');
    if (burger && menu) {
      burger.addEventListener('click', function() {
        const expanded = burger.getAttribute('aria-expanded') === 'true';
        burger.setAttribute('aria-expanded', String(!expanded));
        menu.classList.toggle('open');
        burger.classList.toggle('open');
      });
    }
  });
</script>

<style>
  @import "../styles/palette.css";
  .navbar {
    background: #18191a;
    width: 100vw;
    margin: 0;
    padding: 0.5em 0;
    box-sizing: border-box;
  }
  .navbar-inner {
    display: flex;
    align-items: center;
    justify-content: space-between;
    max-width: 1600px;
    margin: 0 auto;
    padding: 0 2vw;
    width: 100%;
    min-height: 56px;
    position: relative;
  }
  .navbar-left {
    display: flex;
    align-items: center;
    gap: 1em;
  }
  .navbar-burger {
    display: none;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    width: 40px;
    height: 40px;
    background: none;
    border: none;
    cursor: pointer;
    z-index: 1003;
    margin-right: 1em;
  }
  .navbar-burger span {
    display: block;
    width: 28px;
    height: 4px;
    margin: 4px 0;
    background: #fff;
    border-radius: 2px;
    transition: 0.3s;
  }
  .navbar-burger.open span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }
  .navbar-burger.open span:nth-child(2) {
    opacity: 0;
  }
  .navbar-burger.open span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }
  .navbar-menu {
    display: flex;
    gap: 2em;
    list-style: none;
    margin: 0;
    padding: 0;
    transition: max-height 0.3s, opacity 0.3s;
  }
  .navbar li {
    margin: 0;
  }
  .navbar a {
    color: #fff;
    text-decoration: none;
    font-weight: bold;
    font-size: 1.15em;
    transition: color 0.2s;
  }
  .navbar a:hover {
    color: var(--color-secondary);
  }
  .navbar-contact-btn {
    margin-left: 2em;
    padding: 0.5em 1.5em;
    border: 2px solid var(--color-info);
    border-radius: 24px;
    background: var(--color-info);
    color: #fff !important;
    font-weight: 700;
    font-size: 1.15em;
    text-transform: uppercase;
    letter-spacing: 1px;
    transition: background 0.2s, color 0.2s, border-color 0.2s;
    cursor: pointer;
    display: flex;
    align-items: center;
    height: 40px;
    flex-shrink: 0;
    position: relative;
    z-index: 1002;
  }
  .navbar-contact-btn:hover {
    background: var(--color-info-dark);
    border-color: var(--color-info-dark);
    color: #fff !important;
  }
  @media (max-width: 900px) {
    .navbar-inner {
      padding: 1em 2vw;
      min-height: 56px;
    }
    .navbar-left {
      gap: 0.5em;
    }
    .navbar-burger {
      display: flex;
    }
    .navbar-menu {
      flex-direction: column;
      width: 100vw;
      background: #18191a;
      max-height: 0;
      overflow: hidden;
      opacity: 0;
      z-index: 1001;
      box-shadow: 0 8px 32px rgba(7,59,76,0.10);
      align-items: center;
      position: absolute;
      top: 100%;
      left: 0;
      right: 0;
    }
    .navbar-menu.open {
      max-height: 400px;
      opacity: 1;
      padding: 1em 0;
    }
    .navbar-contact-btn {
      margin-left: 0;
      height: 40px;
    }
  }
  @media (max-width: 600px) {
    .navbar-contact-btn {
      padding: 0.35em 0.8em !important;
      font-size: 1em !important;
      padding-top: 0.7em;
      padding-bottom: 0.7em;
    }
    .navbar-menu.open li a {
      padding: 0.7em 0.5em;
      display: block;
      border-radius: 16px !important;
      max-width: 90vw !important;
      letter-spacing: 0.5px;
      margin-left: 0.7em !important;
      margin-right: 0 !important;
      height: 32px !important;
    }
    .navbar-inner, .navbar, .navbar-menu {
      width: 100vw !important;
      max-width: 100vw !important;
      box-sizing: border-box;
      padding-left: 0.5em;
      padding-right: 0.5em;
    }
  }
</style>