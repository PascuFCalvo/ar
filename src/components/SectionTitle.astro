---
export interface Props {
  title: string;
  color?: string;
}
const { title, color = 'var(--color-primary)' } = Astro.props;
---
<h2 class="section-title" style={`color: ${color}`}>{title}</h2>
<style>
.section-title {
  font-size: 2em;
  margin: 2em 0 1em 0;
  text-align: center;
  font-weight: bold;
}
</style>
