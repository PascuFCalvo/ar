    z-index: 1000;
    backdrop-filter: blur(2px);
  }

  .modal-bg.active {
    display: flex;
    animation: fadeIn 0.2s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .contact-modal {
    background: #fff;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.2);
    min-width: 320px;
    max-width: 500px;
    width: 1600;
    position: relative;
    animation: slideUp 0.3s ease-out;
  }

  @keyframes slideUp {
    from {
      transform: translateY(20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .contact-modal h2 {
    margin-top: 0;
    margin-bottom: 1rem;
    color: var(--color-primary, #ff4f8b);
    font-size: 1.8em;
  }

  .close-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    background: none;
    border: none;
    font-size: 1.8rem;
    cursor: pointer;
    color: #666;
    transition: color 0.2s, transform 0.2s;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
  }

  .close-btn:hover {
    color: var(--color-primary, #ff4f8b);
    background: rgba(0, 0, 0, 0.05);
  }

  .close-btn:focus {
    outline: 2px solid var(--color-primary, #ff4f8b);
    outline-offset: 2px;
  }

  .contact-modal label {
    display: block;
    margin-top: 1rem;
    font-weight: 500;
    color: #333;
    margin-bottom: 0.3rem;
  }

  .contact-modal input,
  .contact-modal textarea {
    width: 100%;
    padding: 0.6rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 1rem;
    box-sizing: border-box;
    font-family: inherit;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .contact-modal input:focus,
  .contact-modal textarea:focus {
    outline: none;
    border-color: var(--color-primary, #ff4f8b);
    box-shadow: 0 0 0 3px rgba(255, 79, 139, 0.1);
  }

  .contact-modal textarea {
    resize: vertical;
    min-height: 100px;
  }

  .contact-modal button[type="submit"] {
    margin-top: 1.5rem;
    background: var(--color-primary, #ff4f8b);
    color: #fff;
    border: none;
    padding: 0.8rem 1.5rem;
    border-radius: 5px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s, transform 0.2s;
    width: 100%;
  }

  .contact-modal button[type="submit"]:hover {
    background: var(--color-primary-dark, #e91e63);
    transform: translateY(-1px);
  }

  .contact-modal button[type="submit"]:focus {
    outline: 2px solid var(--color-primary, #ff4f8b);
    outline-offset: 2px;
  }

  /* Media queries */
  @media (max-width: 900px) {
    .clientes-grid {
      grid-template-columns: 1fr;
      gap: 1.5em;
    }

    .clientes-section {
      padding: 2em 4vw;
    }

    .contact-section.contact-rosa {
      padding: 3em 4vw;
    }

    .contact-title {
      font-size: 2em;
    }

    .ana-ruiz-big {
      font-size: 3em;
    }

    .modal-trigger-btn {
      bottom: 1rem;
      right: 1rem;
      padding: 0.8rem 1.5rem;
      font-size: 0.9rem;
    }

    .contact-modal {
      width: 95vw;
      padding: 1.5rem;
    }
  }
</style>