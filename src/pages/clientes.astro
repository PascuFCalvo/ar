<style>
  :global(body) {
    font-family: 'Roboto', Arial, Helvetica, sans-serif;
  }

  /* SecciÃ³n de clientes */
  .clientes-section {
    background: var(--color-primary, #ff4f8b);
    padding: 3.5em 2vw;
    margin: 0 auto;
    max-width: 1600px;
    color: var(--color-accent, #222);
    box-sizing: border-box;
  }

  .clientes-title {
    font-size: 2em;
    font-weight: 700;
    margin-bottom: 0.5em;
    text-align: left;
    letter-spacing: 0.01em;
    color: var(--color-accent, #222);
  }

  .clientes-desc {
    font-size: 1.25em;
    margin-bottom: 2.5em;
    text-align: left;
    opacity: 0.92;
    line-height: 1.6;
    color: var(--color-accent, #222);
  }

  .clientes-grid {
    display: grid;
    grid-template-columns: 1fr 1.2fr 1fr;
    gap: 2em;
    align-items: center;
  }

  /* SecciÃ³n de contacto */
  .contact-section.contact-rosa {
    background: var(--color-primary, #ff4f8b);
    color: var(--color-accent, #222);
    max-width: 1600px;
    margin: 0 auto;
    padding: 4em 2vw;
    text-align: center;
  }

  .contact-title {
    font-size: 2.5em;
    color: var(--color-accent, #222);
    font-weight: 700;
    margin-bottom: 0.6em;
    line-height: 1.15;
  }

  .contact-desc {
    font-size: 1.25em;
    margin-bottom: 2em;
    color: var(--color-accent, #222);
    opacity: 0.92;
    line-height: 1.6;
  }

  .contact-btn {
    display: inline-block;
    background: var(--color-accent, #222);
    color: var(--color-primary, #ff4f8b);
    font-size: 1.25em;
    font-weight: 600;
    border-radius: 24px;
    padding: 0.7em 2em;
    text-decoration: none;
    border: none;
    box-shadow: 0 2px 8px 0 rgba(17, 138, 178, 0.08);
    transition: background 0.2s, color 0.2s, transform 0.2s;
    cursor: pointer;
  }

  .contact-btn:hover {
    background: #fff0f6;
    color: var(--color-accent, #222);
    transform: translateY(-2px);
  }

  .contact-btn:focus {
    outline: 2px solid var(--color-accent, #222);
    outline-offset: 2px;
  }

  .ana-ruiz-big {
    font-size: 6em;
    font-weight: 900;
    color: var(--color-accent, #222);
    text-align: center;
    margin-top: 1.5em;
    margin-bottom: 0.5em;
    letter-spacing: 2px;
    line-height: 1;
  }

  /* Modal */
  .modal-bg {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    align-items: center;
    justify-content: center;
    z-index: 1000;
    backdrop-filter: blur(2px);
  }

  .modal-bg.active {
    display: flex;
    animation: fadeIn 0.2s ease-out;
  }

  @keyframes fadeIn {
    from {
      opacity: 0;
    }
    to {
      opacity: 1;
    }
  }

  .contact-modal {
    background: #fff;
    padding: 2rem;
    border-radius: 10px;
    box-shadow: 0 2px 16px rgba(0, 0, 0, 0.2);
    min-width: 320px;
    max-width: 500px;
    width: 90%;
    position: relative;
    animation: slideUp 0.3s ease-out;
  }

  @keyframes slideUp {
    from {
      transform: translateY(20px);
      opacity: 0;
    }
    to {
      transform: translateY(0);
      opacity: 1;
    }
  }

  .contact-modal h2 {
    margin-top: 0;
    margin-bottom: 1rem;
    color: var(--color-primary, #ff4f8b);
    font-size: 1.8em;
  }

  .close-btn {
    position: absolute;
    top: 10px;
    right: 10px;
    background: none;
    border: none;
    font-size: 1.8rem;
    cursor: pointer;
    color: #666;
    transition: color 0.2s, transform 0.2s;
    width: 32px;
    height: 32px;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
  }

  .close-btn:hover {
    color: var(--color-primary, #ff4f8b);
    background: rgba(0, 0, 0, 0.05);
  }

  .close-btn:focus {
    outline: 2px solid var(--color-primary, #ff4f8b);
    outline-offset: 2px;
  }

  .contact-modal label {
    display: block;
    margin-top: 1rem;
    font-weight: 500;
    color: #333;
    margin-bottom: 0.3rem;
  }

  .contact-modal input,
  .contact-modal textarea {
    width: 100%;
    padding: 0.6rem;
    border: 1px solid #ccc;
    border-radius: 5px;
    font-size: 1rem;
    box-sizing: border-box;
    font-family: inherit;
    transition: border-color 0.2s, box-shadow 0.2s;
  }

  .contact-modal input:focus,
  .contact-modal textarea:focus {
    outline: none;
    border-color: var(--color-primary, #ff4f8b);
    box-shadow: 0 0 0 3px rgba(255, 79, 139, 0.1);
  }

  .contact-modal textarea {
    resize: vertical;
    min-height: 100px;
  }

  .contact-modal button[type="submit"] {
    margin-top: 1.5rem;
    background: var(--color-primary, #ff4f8b);
    color: #fff;
    border: none;
    padding: 0.8rem 1.5rem;
    border-radius: 5px;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: background 0.2s, transform 0.2s;
    width: 100%;
  }

  .contact-modal button[type="submit"]:hover {
    background: var(--color-primary-dark, #e91e63);
    transform: translateY(-1px);
  }

  .contact-modal button[type="submit"]:focus {
    outline: 2px solid var(--color-primary, #ff4f8b);
    outline-offset: 2px;
  }

  .spinner {
    border: 4px solid #f3f3f3;
    border-top: 4px solid var(--color-primary, #ff4f8b);
    border-radius: 50%;
    width: 32px;
    height: 32px;
    animation: spin 1s linear infinite;
    margin: 1em auto 0 auto;
    display: block;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .success-popup {
    display: none;
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: rgba(0, 0, 0, 0.4);
    z-index: 2000;
    align-items: center;
    justify-content: center;
  }

  .success-popup.active {
    display: flex;
  }

  .success-popup-content {
    background: #fff;
    border-radius: 18px;
    padding: 2em 1.5em;
    max-width: 350px;
    width: 90vw;
    box-shadow: 0 2px 16px 0 rgba(17, 138, 178, 0.12);
    text-align: center;
    display: flex;
    flex-direction: column;
    gap: 1em;
    align-items: center;
  }

  .success-popup-content h3 {
    color: var(--color-primary, #ff4f8b);
    margin-bottom: 0.5em;
  }

  .success-popup-content button {
    background: var(--color-primary, #ff4f8b);
    color: #fff;
    border: none;
    border-radius: 20px;
    padding: 0.7em 1.5em;
    font-size: 1.1em;
    cursor: pointer;
    margin-top: 1em;
    transition: background 0.2s;
  }

  .success-popup-content button:hover {
    background: var(--color-primary-dark, #e91e63);
  }

  /* Media queries */
  @media (max-width: 900px) {
    .clientes-grid {
      grid-template-columns: 1fr;
      gap: 1.5em;
    }

    .clientes-section {
      padding: 2em 4vw;
    }

    .contact-section.contact-rosa {
      padding: 3em 4vw;
    }

    .contact-title {
      font-size: 2em;
    }

    .ana-ruiz-big {
      font-size: 3em;
    }

    .contact-modal {
      width: 95vw;
      padding: 1.5rem;
    }
  }
</style>

<script>
  const contactLink = document.getElementById('contact-link');
  const modalBg = document.getElementById('contact-modal-bg');
  const closeModal = document.getElementById('close-modal');
  const contactForm = document.getElementById('contact-form');

  function openContactModal(e?: Event) {
    if (e) e.preventDefault();
    if (modalBg) {
      modalBg.classList.add('active');
      const firstInput = modalBg.querySelector('input');
      if (firstInput && firstInput instanceof HTMLInputElement) {
        setTimeout(() => firstInput.focus(), 100);
      }
    }
  }

  function closeContactModal() {
    if (modalBg) {
      modalBg.classList.remove('active');
    }
  }

  if (contactLink) {
    contactLink.addEventListener('click', openContactModal);
  }

  if (closeModal) {
    closeModal.addEventListener('click', closeContactModal);
  }

  if (modalBg) {
    modalBg.addEventListener('click', (e) => {
      if (e.target === modalBg) {
        closeContactModal();
      }
    });
  }

  document.addEventListener('keydown', (e) => {
    if (e.key === 'Escape' && modalBg?.classList.contains('active')) {
      closeContactModal();
    }
  });

  if (contactForm) {
    contactForm.addEventListener('submit', async function(e) {
      e.preventDefault();
      if (contactForm instanceof HTMLFormElement) {
        const formData = new FormData(contactForm);
        const data = {
          name: formData.get('name'),
          email: formData.get('email'),
          message: formData.get('message'),
        };
        
        const sendBtn = document.getElementById('send-btn') as HTMLButtonElement | null;
        const spinner = document.getElementById('spinner');
        const successPopup = document.getElementById('success-popup');
        const closeSuccessPopup = document.getElementById('close-success-popup');
        
        if (sendBtn) {
          sendBtn.disabled = true;
          sendBtn.style.pointerEvents = 'none';
          sendBtn.style.opacity = '0.6';
        }
        if (spinner) spinner.style.display = 'block';
        
        try {
          const res = await fetch('/api/send-email', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(data),
          });
          const result = await res.json();
          
          if (result.success) {
            contactForm.reset();
            // Mostrar el popup de Ã©xito despuÃ©s de ocultar el spinner
            setTimeout(() => {
              if (successPopup) successPopup.classList.add('active');
            }, 100);
          } else {
            alert('Error al enviar el mensaje. Intenta de nuevo.');
          }
        } catch (err) {
          alert('Error de red o del servidor.');
        } finally {
          if (sendBtn) {
            sendBtn.disabled = false;
            sendBtn.style.pointerEvents = '';
            sendBtn.style.opacity = '';
          }
          if (spinner) spinner.style.display = 'none';
        }
        // Asegurar que el botÃ³n de cerrar siempre funcione
        if (closeSuccessPopup && successPopup) {
          closeSuccessPopup.onclick = () => {
            successPopup.classList.remove('active');
            closeContactModal();
          };
        }
      }
    });
  }
</script>